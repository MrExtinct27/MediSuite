# MediSuite AI Agent - copy to .env and fill in values
# Database
DATABASE_URL=sqlite:///./medisuite.db

# ChromaDB (persistence path; uses HuggingFace embeddings, not OpenAI)
CHROMA_PERSIST_DIR=./chroma_data
# HuggingFace sentence-transformers model for embeddings (via ChromaDB)
EMBEDDING_MODEL=pritamdeka/S-PubMedBert-MS-MARCO

# LLM: GPT-4o for reasoning/reranking only (langchain-openai). Do NOT use for embeddings.
OPENAI_API_KEY=
MISTRAL_API_KEY=

# LangSmith (optional tracing)
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=
LANGCHAIN_TRACING_V2=true

# Agent thresholds
CONFIDENCE_THRESHOLD=0.80
MAX_REVALIDATION_ATTEMPTS=2

# API
API_HOST=0.0.0.0
API_PORT=8000
